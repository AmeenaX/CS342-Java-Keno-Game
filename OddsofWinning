	VBox buildTable(String title, String[][] data, String cellStyle, String OddsToWin) {
		Label TileLabel = new Label(title);              
		TileLabel.setTextFill(NewLook.ContentTextColor);    


		Label HMatch = new Label("Match");
		HMatch.setStyle(cellStyle);                
		Label HPrize = new Label("Prize");
		HPrize.setStyle(cellStyle);

        GridPane grid = new GridPane();
        grid.setHgap(10);
        grid.setVgap(8);
        grid.add(HMatch, 0, 0);
        grid.add(HPrize, 1, 0);

        for (int i = 0; i < data.length; i++) {
            Label x = new Label(data[i][0]); x.setStyle(cellStyle);
            Label y = new Label(data[i][1]); y.setStyle(cellStyle);
            grid.add(x, 0, i + 1);
            grid.add(y, 1, i + 1);
        }
        
        Label OddsVal = new Label("Overall Odds: " + OddsToWin);
        OddsVal.setTextFill(NewLook.ContentTextColor);
        OddsVal.setMaxWidth(Double.MAX_VALUE);
        
        VBox table = new VBox(TileLabel, grid, OddsVal);
        table.setAlignment(Pos.TOP_LEFT);
        table.setSpacing(8);
        return table;
    }
	
	VBox buildMultiplierTable(String[][] data, String Style) {
        Label Multiplier  = new Label("Multiplier"); 
        Multiplier.setStyle(Style);
        Label HoldsOdds = new Label("Odds 1 in");  
        HoldsOdds.setStyle(Style);

        GridPane grid = new GridPane();
        grid.setHgap(10);
        grid.setVgap(8);
        grid.add(Multiplier,  0, 0);
        grid.add(HoldsOdds, 1, 0);
        
       grid.setMaxWidth(Double.MAX_VALUE);
        for (int i = 0; i < data.length; i++) {
            Label mul  = new Label(data[i][0]); 
            mul.setStyle(Style);
            Label odds = new Label(data[i][1]); 
            odds.setStyle(Style);
            grid.add(mul,  0, i + 1);
            grid.add(odds, 1, i + 1);
        }
        HBox wrapper = new HBox(grid);
        wrapper.setAlignment(Pos.CENTER);
        
        VBox table = new VBox(wrapper);
        table.setAlignment(Pos.CENTER);
        table.setSpacing(8);
        return table;
    }
}
