        String[][] SevenOdds = {{"7","$4,500"},{"6","$100"},{"5","$17"},{"4","$3"},{"3","$1"}};
        String[][] SixOdds = {{"6","$1,100"},{"5","$50"},{"4","$8"},{"3","$1"}};
        String[][] FiveOdds = {{"5","$420"},{"4","$18"},{"3","$2"}};
        String[][] FourOdds = {{"4","$75"},{"3","$5"},{"2","$1"}};
        String[][] ThreeOdds= {{"3","$27"},{"2","$2"}};
        String[][] TwoOdds  = {{"2","$11"}};
        String[][] OneOdds  = {{"1","$2"}};
        String StyleSettings = NewLook.OddsTableCellStyle;
        
        VBox ten  = buildTable("★ 10 Spot Game",  TenOdds,  StyleSettings, "1 in 9.05");
        VBox nine = buildTable("★ 9 Spot Game",   NineOdds, StyleSettings, "1 in 6.53");
        VBox eight= buildTable("★ 8 Spot Game",   EightOdds,StyleSettings, "1 in 9.77");
        VBox seven= buildTable("★ 7 Spot Game",   SevenOdds,StyleSettings, "1 in 4.23");
        VBox six  = buildTable("★ 6 Spot Game",   SixOdds,  StyleSettings, "1 in 6.19");
        VBox five = buildTable("★ 5 Spot Game",   FiveOdds, StyleSettings, "1 in 10.34");
        VBox four = buildTable("★ 4 Spot Game",   FourOdds, StyleSettings, "1 in 3.86");
        VBox three= buildTable("★ 3 Spot Game",   ThreeOdds,StyleSettings, "1 in 6.55");
        VBox two  = buildTable("★ 2 Spot Game",   TwoOdds,  StyleSettings, "1 in 16.63");
        VBox one  = buildTable("★ 1 Spot Game",   OneOdds,  StyleSettings, "1 in 4.00");

        
        
       //Header Labels
        Label MultiplierWins1 = new Label("★ Many Ways To Win with Multiplier");
        MultiplierWins1.setMaxWidth(Double.MAX_VALUE);
        MultiplierWins1.setAlignment(Pos.CENTER); 
